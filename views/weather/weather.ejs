<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    <link rel="stylesheet" href="public/styles/index.css">
    <script src="public/scripts/weatherform.js" defer></script>
</head>
<body>
    <!-- Header partial -->
    <%- include('../partials/header.ejs') %>

    <!-- Navigation partial -->
    <%- include('../partials/nav.ejs') %>

    <div id="images">
        <img id="weatherIcon" src="" class="weatherIcon" style="display: none;" />
        <img id="temperatureIcon" src="" class="weatherIcon" style="display: none;" />
        <section class="textBox">
            <h2 id="statusHeader">Loading weather data...</h2>
        </section>
    </div>

    <div class="spacer">
        <form id="userForm">
            <label for="phoneNum">Phone Number:</label>
            <input type="text" id="phoneNum" required>
            <button type="submit">Submit</button>
        </form>
    </div>

    <script src="public/scripts/weather.js"></script> 

    <!-- Footer partial -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>