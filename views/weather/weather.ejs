<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather</title>
    <link rel="stylesheet" href="public/styles/index.css">
    <script src="public/scripts/weatherform.js" defer></script>
</head>
<body>
    <!-- Header partial -->
    <%- include('../partials/header.ejs') %>

    <!-- Navigation partial -->
    <%- include('../partials/nav.ejs') %>

    <div id="images">
        <img id="weatherIcon" src="" class="weatherIcon" style="display: none;" />
        <img id="temperatureIcon" src="" class="weatherIcon" style="display: none;" />
        <section class="textBox">
            <h2 id="statusHeader">Loading weather data...</h2>
        </section>
    </div>

    <section class="textBox">
        <p id="alertTitle">Recieve weather alerts<p>
        <div class="spacer">
            <form id="userForm">
                <input pattern="[0-9]+" id="phoneNum" required>
                <button type="submit" id="phoneButton">Submit</button>
            </form>
        </div>
    </section>

    <div class="spacer"></div>

    <script src="public/scripts/weather.js"></script> 

    <!-- Footer partial -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>